<?xml version="1.0" encoding="utf-8"?>
<Defs>
  
  <!-- Custom Portal Sounds -->
  <SoundDef>
    <defName>PortalGun_PortalOpen</defName>
    <context>MapOnly</context>
    <maxSimultaneous>3</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>UI/Designators/PlanRemove</clipPath> <!-- Placeholder, using game sound -->
          </li>
        </grains>
        <volumeRange>0.8~1.0</volumeRange>
        <pitchRange>0.8~1.2</pitchRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>PortalGun_PortalTeleport</defName>
    <context>MapOnly</context>
    <maxSimultaneous>2</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Misc/RadialExplosion</clipPath> <!-- Placeholder, using game sound -->
          </li>
        </grains>
        <volumeRange>0.6~0.8</volumeRange>
        <pitchRange>1.2~1.5</pitchRange>
      </li>
    </subSounds>
  </SoundDef>

</Defs>
